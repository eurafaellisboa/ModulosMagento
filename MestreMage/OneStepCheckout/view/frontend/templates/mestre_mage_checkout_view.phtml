<script>
    require([
        "jquery",
        "jquery/ui"
    ], function($){
        $( document ).ready(function() {

            var existCondition = setInterval(function() {
                var postcode = $('div#shipping-new-address-form [name*="shippingAddress.postcode"] [name*="postcode"]');
                var vat_id = $('div#shipping-new-address-form [name*="shippingAddress.vat_id"] [name*="vat_id"]');
                var telephone = $('div#shipping-new-address-form [name*="shippingAddress.telephone"] [name*="telephone"]');
                var fax = $('div#shipping-new-address-form [name*="shippingAddress.fax"] [name*="fax"]');
                var street_0 =  $('div#shipping-new-address-form [name*="shippingAddress.street.0"]');
                var street_1 =  $('div#shipping-new-address-form [name*="shippingAddress.street.1"]');
                var street_2 =  $('div#shipping-new-address-form [name*="shippingAddress.street.2"]');
                var street_3 =  $('div#shipping-new-address-form [name*="shippingAddress.street.3"]');
                var city = $('div#shipping-new-address-form [name*="shippingAddress.city"]');
                var region_id = $('div#shipping-new-address-form [name*="shippingAddress.region_id"]');
                var country_id = $('div#shipping-new-address-form [name*="shippingAddress.country_id"]');

                var input_street_0 =  $('div#shipping-new-address-form [name*="shippingAddress.street.0"] [name*="street[0]"]');
                var input_street_1 =  $('div#shipping-new-address-form [name*="shippingAddress.street.1"] [name*="street[1]"]');
                var input_street_2 =  $('div#shipping-new-address-form [name*="shippingAddress.street.2"] [name*="street[2]"]');
                var input_street_3 =  $('div#shipping-new-address-form [name*="shippingAddress.street.3"] [name*="street[3]"]');
                var input_city = $('div#shipping-new-address-form [name*="shippingAddress.city"] [name*="city"]');

                if (postcode.length) {
                    clearInterval(existCondition);
                    if(!postcode.val()){
                        street_0.hide();
                        street_1.hide();
                        street_2.hide();
                        street_3.hide();
                        city.hide();
                        region_id.hide();
                        country_id.hide();
                    }
                    postcode.attr('inputmode','numeric');
                    vat_id.attr('inputmode','numeric');
                    telephone.attr('inputmode','numeric');
                    fax.attr('inputmode','numeric');

                    postcode.attr('autocomplete','off');
                    input_street_0.attr('autocomplete','off');
                    input_street_1.attr('autocomplete','off');
                    input_street_2.attr('autocomplete','off');
                    input_street_3.attr('autocomplete','off');
                    input_city.attr('autocomplete','off');

                    postcode.on('keyup input', function(){
                        if($(this).val().length >= 8) {
                            street_0.show('slow');
                            street_1.show('slow');
                            street_2.show('slow');
                            street_3.show('slow');
                            city.show('slow');
                            region_id.show('slow');
                            country_id.show('slow');
                        }
                    });
                }
                $('span#block-discount-heading').click(function(){
                    $('button.action.action-apply').prop('type','');
                });

            }, 100);
            
        });

        <?=$custom_js?>
    });

</script>


