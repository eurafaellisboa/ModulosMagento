<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_item">
		<column xsi:type="decimal" name="category_fee" scale="4" default="0" precision="20" unsigned="false" nullable="false" comment="Category Fee"/>
		<column xsi:type="varchar" name="category_ids" nullable="true" length="255" comment="Category Ids"/>
    </table>
	
	<table name="sales_order_item">
		<column xsi:type="decimal" name="category_fee" scale="4" default="0" precision="20" unsigned="false" nullable="false" comment="Category Fee"/>
    </table>
	
	<table name="quote">
		<column xsi:type="decimal" name="category_fee" scale="4" default="0" precision="20" unsigned="false" nullable="false" comment="Category Total Fee"/>
    </table>
	
	<table name="sales_order">
		<column xsi:type="decimal" name="category_fee" scale="4" default="0" precision="20" unsigned="false" nullable="false" comment="Category Total Fee"/>
    </table>
	
	<table name="sales_invoice">
		<column xsi:type="decimal" name="category_fee" scale="4" default="0" precision="20" unsigned="false" nullable="false" comment="Category Total Fee"/>
    </table>
</schema>